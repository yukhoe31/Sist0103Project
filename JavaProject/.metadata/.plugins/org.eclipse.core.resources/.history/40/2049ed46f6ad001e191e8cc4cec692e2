package day0108;

public class L15_QuizForWhile {

	public static void main(String[] args) {
		
		test1();
		test2();
		test3();

	}
	
	
	public static void test1() {
		//문제: 1~100까지의 3의 배수 구하기.
		int n = 0;
		int cnt = 0;
		
		while(true) {
			n++;
			
			//3의 배수이면, cnt변수 1증가
			if(n%3 == 0) {
				cnt++;
			}
			//n이 100이면 while문 종료
			if(n==100) {
				break;
			}	
		}
		System.out.println("3의 배수 갯수: " + cnt +" 개");
		
	}
	
	public static void test2() {
		//1~100까지의 짝수합 구하기(while(true))
		int sum = 0;
		int i =0;
		
		while(true) {
			i++;
			if(i%2 == 1) {//홀수면 첫줄로 이동
				continue;
			}
			sum += i;
		}
		System.out.println("1~100 짝수합:" + sum);
	}
	
	
	public static void test3() {

		
		//1~100까지의 홀수합 구하기(while(true))
		int sum = 0;
		
		for(int i=1;i<=100;i++) {
			if(i%2==1) {
				sum+=i;
			}
		}
		System.out.println("1~100 홀수합:" + sum);
	}
}
