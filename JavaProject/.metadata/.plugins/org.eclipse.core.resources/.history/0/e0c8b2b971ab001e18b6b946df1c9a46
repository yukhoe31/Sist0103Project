package day0105;

import java.util.Scanner;

public class QuizOper_07 {

	public static void main(String[] args) {
		// 여러분이 받은 알바비를 입력한 후,
		// 만원, 천원, 백원, 십원, 일원의 갯수를 출력해라.
		
		/*
		 * 알바비는?  568712
		 * 
		 * 만원: 56 -> 568712/10000 = 56 , 568712 % 10000 = 8712
		 * 천원: 8  -> 8712/1000 = 8 , 8712 % 1000 = 712
		 * 백원: 7  -> 712/100 = 7, 712 % 100 =12
		 * 십원: 1
		 * 일원: 2
		 */
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("알바비는? ");
		int money = sc.nextInt();
		
        int a = money/10000;
		System.out.println("만원:"+ a);
		
		int b = money%1000;
		b = b/1000;
		System.out.println("천원:"+ b);
		
		int c = money%100;
		c = c/100;
		System.out.println("백원:"+ c);
		
		int d = money%10;
		d = d/10;
		System.out.println("십원:"+ d);
		
		System.out.println("일원: "+ e);
		
	}

}
