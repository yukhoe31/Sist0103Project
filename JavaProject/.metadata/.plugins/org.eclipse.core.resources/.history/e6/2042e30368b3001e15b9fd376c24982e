class Shop{

	private String sangName;
	private int su;
	private int dan;


	public String getSangName() {
		return sangName;
	}



	public void setSangName(String sangName) {
		this.sangName = sangName;
	}



	public int getSu() {
		return su;
	}



	public void setSu(int su) {
		this.su = su;
	}



	public int getDan() {
		return dan;
	}



	public void setDan(int dan) {
		this.dan = dan;
	}



	private static int count=0;


}	
