package day0110;

class Info{
	
	//캡슐화 : 
	//인스턴스 변수 만들기
	private String stuName;
	private int stuAge;
	
	//setter메서드
	//1.데이터를 수정할 목적-set변수명
	//2.저장용도이므로 결과값 즉, return값이 없다.
	//3.리턴값이 없으므로 void라고 지정해야 한다.
	
	public void setName(String stuName) {
		
		//구분차원에서 왼쪽이 변수야~라고 this 붙여준것.
		this.stuName = stuName; //이름이 다를경우엔 this생략 가능
		
	}
	
	public void setAge(int setAge) {
		this.stuAge = stuAge;
	}
	
	//getter메서드
	//1.데이터를 조회(출력)할 목적-get변수명
	//2.데이터를 얻는 목적이므로 인자값이 없다.
	//3.실행결과값을 돌려주므로 'return 결과값'으로 지정
	public String getName() {
		return stuName;
	}
	
}


public class L12_WorkerMethod {

	public static void main(String[] args) {
		
		Info in1 = new Info();
		//in1.stuName = "홍길동";
		//인스턴스변수에 private이 붙으면 변수접근이 안된다.(생성을 하더라도)
		//in1.stuAge = 33;
		
		//setter메서드 이용해서 값을 수정
		in1.setName("최민영");
		in1.setAge(22);
		
		//getter메서드 이용해서 값을 얻기
		

	}

}
