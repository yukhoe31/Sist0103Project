package day0104;

public class book29_01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int x;
		x = 10; //나는 10진수 정수의 저장을 위한 메모리 공간을 할당시킨다.
				//그리고 그 메모리 공간의 이름은 x라고 하겠다.
		int y = 20;
		//int result = x + y;
		//System.out.println(result);
		System.out.println(x+y);//같은 내용이지만 위처럼 '변수'화 하는 걸 더 추천한다.
		System.out.println(x+ "+" + y);
		
		
	}

}
